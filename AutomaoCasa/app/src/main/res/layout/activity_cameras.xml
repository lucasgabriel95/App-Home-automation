<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamerasActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:columnCount="1">

        <!-- Row 1 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


            <LinearLayout
                android:id="@+id/button_webView_cam1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_menu_round"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/button_webView_cam12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:ignore="WebViewLayout">

                        <WebView
                            android:id="@+id/webView_cam1"
                            android:layout_width="250dp"
                            android:layout_height="190dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="300dp"
                            android:layout_marginTop="20dp"
                            android:text="Frente"
                            android:textSize="15dp">


                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RelativeLayout>

                    <ImageView

                        android:id="@+id/imv_button_lampada"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="297dp"
                        android:layout_marginTop="-150dp"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/fullscreen">

                    </ImageView>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <!-- Row 2 -->
        <!-- Column 2 -->
        <!-- Row 3 -->
        <!-- Column 3 -->
        <!-- Row 4 -->
        <!-- Column 4 -->
        <!-- Row 5 -->
        <!-- Column 5 -->



    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>